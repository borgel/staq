DEPDIR=depends
CFLAGS=-c -g -O3 -Wall -fPIC
LDFLAGS=-g -O3 -Wall -Werror
CC=gcc

all:		libsoldout.o mkd2term soldoutdemo

.PHONY:		all clean


soldoutdemo:	soldoutdemo.o markdown.o array.o buffer.o renderers.o
	$(CC) $(LDFLAGS) $^ -o $@ -lcurses

# libraries

libsoldout.o: markdown.o array.o buffer.o renderers.o
	$(CC) $(LDFLAGS) -shared $^ -o $@


# executables

mkd2term:	mkd2term.o libsoldout.o
	$(CC) $(LDFLAGS) $^ -o $@ -lcurses

# housekeeping

clean:
	rm -f *.o
	rm -f libsoldout.o mkd2html mkd2man benchmark soldoutdemo
	rm -rf $(DEPDIR)


# dependencies

include $(wildcard $(DEPDIR)/*.d)


# generic object compilations

%.o:	%.c
	@mkdir -p $(DEPDIR)
	@$(CC) -MM $< > $(DEPDIR)/$*.d
	$(CC) $(CFLAGS) -o $@ $<

%.o:	%.m
	@mkdir -p $(DEPDIR)
	@$(CC) -MM $< > depends/$*.d
	$(CC) $(CFLAGS) -o $@ $<
